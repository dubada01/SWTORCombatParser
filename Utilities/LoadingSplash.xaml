<Window x:Class="SWTORCombatParser.Utilities.LoadingSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTORCombatParser.Utilities"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="LoadingSplash" Height="200" Width="600" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Topmost="True">
    <Border Background="WhiteSmoke" CornerRadius="10" BorderThickness="2" BorderBrush="LightGray">
        <Grid>
            <Image Width="100" gif:ImageBehavior.AnimatedSource="../resources/Loading.gif" HorizontalAlignment="Left" Margin="75,0,0,0"></Image>
            <TextBlock FontFamily="{StaticResource MainFont}" FontSize="60" FontWeight="DemiBold" Text="Loading..." HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,75,0"></TextBlock>
        </Grid>
    </Border>

</Window>
