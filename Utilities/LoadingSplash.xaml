<Window x:Class="SWTORCombatParser.Utilities.LoadingSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTORCombatParser.Utilities"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="LoadingSplash" Height="200" Width="600" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Topmost="True">
    <Border Background="WhiteSmoke" CornerRadius="10" BorderThickness="2" BorderBrush="LightGray">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".33*"/>
                <ColumnDefinition Width="0.66*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Width="100" gif:ImageBehavior.AnimatedSource="../resources/Loading.gif" HorizontalAlignment="Left" Margin="75,0,0,0"></Image>
            <TextBlock Grid.Column="1" x:Name="LoadingText" FontFamily="{StaticResource MainFont}" FontSize="50" TextAlignment="Center" FontWeight="DemiBold" TextWrapping="Wrap" Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,20,0"></TextBlock>
        </Grid>
    </Border>

</Window>
