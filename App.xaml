<Application x:Class="SWTORCombatParser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SWTORCombatParser" xmlns:converters="clr-namespace:SWTORCombatParser.Utilities.Converters"
             Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Utilities/UIStyles/Colors.xaml"/>
                <ResourceDictionary Source="Utilities/UIStyles/ThumbStyle.xaml"/>
                <ResourceDictionary Source="Utilities/UIStyles/SliderStyles.xaml"/>
                <ResourceDictionary Source="Utilities/UIStyles/Buttons.xaml"/>
                <ResourceDictionary Source="Utilities/UIStyles/TabHeader.xaml"/>
                <ResourceDictionary Source="Utilities/UIStyles/ComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:PastCombatSelectedToBackgroundConverter x:Key="PastCombatSelectedToBackgroundConverter"/>
            <converters:LiveParseActiveToButtonTextConverter x:Key="LiveParseActiveToButtonTextConverter"/>
            <converters:RaidGroupToVisibilityConverter x:Key="RaidGroupToVisibilityConverter"/>
            <converters:RoleToImageSourceConverter x:Key="RoleToImageSourceConverter"/>
            <converters:LiveParseActiveToBrushConverter x:Key="LiveParseToBrushConverter"/>
            <converters:OverlayMetricToColorConverter x:Key="OverlayMetricTypeToColorConverter"/>
            <converters:OverlayMoveableToVisibilityConverter x:Key="OverlayMoveableToVisibilityConverter"/>
            <converters:OverlyTypeToVisibilityConverter x:Key="OverlayTypeToVisibilityConverter"/>
            <converters:EncounterInfoToPastCombatColorConverter x:Key="EncounterInfoToPastCombatColorConverter"/>
            <converters:EffectSelectedToTextConverter x:Key="EffectSelectedToTextConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibiityConverter"/>
            <converters:LiveParseActiveToButtonColorConverter x:Key="LiveParseActiveToButtonColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
