<Window x:Class="SWTORCombatParser.Views.Challenges.ChallengeWindow"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views.Challenges"
                xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.Challenges"
                x:DataType="vm:ChallengeWindowViewModel"
             mc:Ignorable="d" 
             Height="150" Width="250" Title="ChallengesWindow" Background="{x:Null}"  Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Grid>
            <Grid IsVisible="{Binding OverlaysMoveable, Converter={StaticResource BooleanToVisibiityConverter}}">
                <Viewbox HorizontalAlignment="Center" MaxHeight="30" Margin="0,1,0,0">
                    <TextBlock Foreground="Beige" FontFamily="{StaticResource MainFont}"  Text="Challenges"></TextBlock>
                </Viewbox>
            </Grid>
            <local:ChallengeControl/>
        </Grid>
    </Grid>
</Window>
