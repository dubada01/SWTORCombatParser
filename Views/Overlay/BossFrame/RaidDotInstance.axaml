<UserControl x:Class="SWTORCombatParser.Views.Overlay.BossFrame.RaidDotInstance"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views.Overlay.RaidHOTs"
                xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.Timers"
             x:DataType="vm:TimerInstanceViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid HorizontalAlignment="Stretch">
        <Border x:Name="TimerBar" FlowDirection="RightToLeft" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="DimGray" Margin="0,0,0,0" Grid.Column="0" CornerRadius="3" Background="{Binding TimerForeground}" >
            <Border.RenderTransform>
                <ScaleTransform  ScaleX="{Binding CurrentRatio, Mode=OneTime}" ScaleY="1"></ScaleTransform>
            </Border.RenderTransform>
        </Border>
            
    </Grid>
</UserControl>
