<UserControl x:Class="SWTORCombatParser.Views.DataGrid_Views.DataGridRowView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views.DataGrid_Views"
             xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.DataGrid"
                x:DataType="vm:MemberInfoViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding StatsSlots}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:StatSlotView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1"></UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>  
    </Grid>
</UserControl>
