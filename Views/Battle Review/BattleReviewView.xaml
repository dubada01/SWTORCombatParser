<UserControl x:Class="SWTORCombatParser.Views.BattleReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.45*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="0" >
                        <TextBlock Text="Available Entities"></TextBlock>
                        <ListView Margin="0,40,0,0" ItemsSource="{Binding AvailableEntities}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Entity.Name}"></TextBlock>
                                        <CheckBox IsChecked="{Binding Selected}"></CheckBox>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                <StackPanel VerticalAlignment="Bottom" Grid.Row="1" Orientation="Horizontal">
                    <TextBlock TextWrapping="Wrap" Width="150" TextAlignment="Center" Text="Plot Moving Average Duration: " FontSize="15"></TextBlock>
                    <TextBox HorizontalContentAlignment="Center" Text="{Binding MovingAverageWindow, UpdateSourceTrigger=PropertyChanged}" Width="75" VerticalContentAlignment="Center" Height="50"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock TextWrapping="Wrap" Width="100" TextAlignment="Center" Text="Data Type To Display: " FontSize="15"></TextBlock>
                    <ComboBox Style="{StaticResource NewComboStyle}" HorizontalContentAlignment="Center" ItemsSource="{Binding AvailableDisplayTypes}" SelectedValue="{Binding SelectedDisplayType}" Width="150" VerticalContentAlignment="Center" Height="50"></ComboBox>
                </StackPanel>
            </Grid>
            <ContentPresenter Grid.Column="1" Content="{Binding EventViewContent}"></ContentPresenter>
            <ContentPresenter Margin="5" Grid.Column="2" Content="{Binding MapViewContent}"></ContentPresenter>
        </Grid>
        <Grid Grid.Row="1">
            <ContentPresenter Margin="0,0,0,45" Content="{Binding PlotViewContent}"></ContentPresenter>
            <Slider Margin="{Binding SliderMargin}" Value="{Binding SliderPosition}" Style="{StaticResource ResourceScrubberStyle}" Orientation="Horizontal" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Bottom"></Slider>
        </Grid>

    </Grid>
</UserControl>
